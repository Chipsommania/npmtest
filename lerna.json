{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/test/**",
        "**/*.md"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    }
  }
}
